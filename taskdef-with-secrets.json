{
  "family": "snspmt-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "8192",
  "executionRoleArn": "arn:aws:iam::868812195478:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::868812195478:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "snspmt-app",
      "image": "868812195478.dkr.ecr.ap-northeast-2.amazonaws.com/snspmt:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "*"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "TEMP_DIR",
          "value": "/tmp"
        },
        {
          "name": "TMPDIR",
          "value": "/tmp"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:868812195478:secret:snspmt/database:url::"
        },
        {
          "name": "SMMPANEL_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:868812195478:secret:snspmt/api-keys:smmpanel::"
        }
      ],
      "parameters": [
        {
          "name": "PGSSLMODE",
          "valueFrom": "/snspmt/database/ssl-mode"
        },
        {
          "name": "DATABASE_POOL_SIZE",
          "valueFrom": "/snspmt/database/pool-size"
        },
        {
          "name": "DATABASE_TIMEOUT",
          "valueFrom": "/snspmt/database/timeout"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 15,
        "timeout": 3,
        "retries": 3,
        "startPeriod": 30
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/snspmt-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "logs",
          "containerPath": "/app/logs",
          "readOnly": false
        },
        {
          "sourceVolume": "data",
          "containerPath": "/app/data",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "logs",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-xxxxxxxxx",
        "rootDirectory": "/logs",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-xxxxxxxxx",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-xxxxxxxxx",
        "rootDirectory": "/data",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-xxxxxxxxx",
          "iam": "ENABLED"
        }
      }
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Project",
      "value": "SNS-PMT"
    },
    {
      "key": "Environment",
      "value": "Production"
    }
  ]
}
