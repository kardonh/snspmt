{
  "family": "snspmt-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "8192",
  "executionRoleArn": "arn:aws:iam::868812195478:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "snspmt-app",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:Snspmt2024!@snspmt-cluste.cluster-cvmiee0q0zhs.ap-northeast-2.rds.amazonaws.com:5432/snspmt"
        },
        {
          "name": "SMMPANEL_API_KEY",
          "value": "5efae48d287931cf9bd80a1bc6fdfa6d"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "*"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "TEMP_DIR",
          "value": "/tmp"
        },
        {
          "name": "TMPDIR",
          "value": "/tmp"
        },
        {
          "name": "PGSSLMODE",
          "value": "require"
        },
        {
          "name": "DATABASE_POOL_SIZE",
          "value": "10"
        },
        {
          "name": "DATABASE_TIMEOUT",
          "value": "30"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 15,
        "timeout": 3,
        "retries": 3,
        "startPeriod": 30
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/snspmt-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
