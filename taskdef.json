{
  "family": "snspmt-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::868812195478:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "snspmt-app",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://snspmt_admin:Snspmt2024!@snspmt-db.cvmiee0q0zhs.ap-northeast-2.rds.amazonaws.com:5432/snspmt_db"
        },
        {
          "name": "SMMPANEL_API_KEY",
          "value": "your_api_key_here"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "*"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-2"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/snspmt-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
